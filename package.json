{
  "name": "locked-folder",
  "version": "1.0.0",
  "main": "build/main.cjs",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "postbuild": "cpx \"src/**/*.{html,css,json}\" build/",
    "watch:ts": "tsc -w",
    "watch:assets": "cpx \"src/**/*.{html,css,json}\" build/ --watch --verbose",
    "watch": "npm-run-all -p watch:*"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "electron": "^38.1.0"
  },
  "devDependencies": {
    "cpx2": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
