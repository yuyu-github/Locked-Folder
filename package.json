{
  "name": "locked-folder",
  "version": "1.0.6",
  "main": "build/main.cjs",
  "type": "module",
  "build": {
    "appId": "com.yuyu.locked-folder",
    "productName": "Locked Folder",
    "files": [
      "build"
    ],
    "win": {
      "icon": "icon/win.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "cpx \"src/**/*.{html,css,json,png}\" build/",
    "watch:ts": "tsc -w",
    "watch:assets": "cpx \"src/**/*.{html,css,json,png}\" build/ --watch --verbose",
    "watch": "npm-run-all -p watch:*"
  },
  "dependencies": {
    "chokidar": "^4.0.3"
  },
  "devDependencies": {
    "cpx2": "^8.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
